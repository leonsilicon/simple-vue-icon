{
	"name": "simple-vue-icon",
	"version": "1.1.13",
	"type": "module",
	"description": "A simple icon component for Vue 3",
	"main": "./index.js",
	"prettier": "@leonzalion/configs/prettier.cjs",
	"commitlint": {
		"extends": [
			"@leonzalion/configs/commitlint.cjs"
		]
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/leonzalion/simple-vue-icon.git"
	},
	"homepage": "https://github.com/leonzalion/simple-vue-icon#readme",
	"keywords": [
		"material design icons",
		"vue 3",
		"mdi",
		"vue",
		"vuejs",
		"vue.js",
		"icons",
		"icon",
		"material-design",
		"material design"
	],
	"bugs": {
		"url": "https://github.com/leonzalion/simple-vue-icon/issues"
	},
	"author": "Leon Si <contact@leonzalion.com>",
	"license": "MIT",
	"scripts": {
		"lint": "eslint --cache --fix .",
		"prepare": "lion-git-hooks",
		"prettier": "prettier --write src",
		"tc": "tsc --noEmit",
		"build": "node-ts ./scripts/build.ts",
		"test": "vitest run",
		"release": "lionp"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.2.1",
		"@leonzalion/configs": "^1.1.1",
		"@mdi/js": "^6.5.95",
		"@types/node": "^17.0.21",
		"@vue/test-utils": "^2.0.0-rc.17",
		"desm": "^1.2.0",
		"eslint": "^8.10.0",
		"execa": "^6.1.0",
		"jsdom": "^19.0.0",
		"lint-staged": "^12.3.4",
		"lion-git-hooks": "^1.0.6",
		"lion-system": "^1.0.10",
		"lionp": "^1.0.19",
		"prettier": "^2.5.1",
		"ts-node": "^10.5.0",
		"typescript": "^4.6.2",
		"vitest": "^0.6.0",
		"vue": "^3.2.31"
	},
	"peerDependencies": {
		"vue": "^3"
	},
	"lint-staged": {
		"*.{js,ts,vue}": [
			"pnpm run lint",
			"pnpm run prettier"
		]
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm exec node-ts ./scripts/hooks/pre-commit.ts",
		"pre-push": "pnpm exec node-ts ./scripts/hooks/pre-push.ts",
		"commit-msg": "pnpm exec node-ts ./scripts/hooks/commit-msg.ts $@"
	},
	"publishConfig": {
		"directory": "dist"
	}
}
